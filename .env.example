# Frontend Environment Variables
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_ENVIRONMENT=development

# Backend Environment Variables (api/.env)
NODE_ENV=development
PORT=8000

# Database
MONGODB_URI=mongodb://localhost:27017/milk-company

# JWT Secret
JWT_SECRET=your-secret-key-here

# SaaS Admin Credentials
SAAS_ADMIN_EMAIL=admin@admin.com
SAAS_ADMIN_PASSWORD=change-this-password
# SAAS_ADMIN_PASSWORD_HASH=use-bcrypt-hashed-password-in-production

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=milk-company-uploads

# Email Service (SendGrid/SES)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@milkcompany.com

# Payment Gateway (Stripe/Razorpay)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Feature Flags
ENABLE_MULTI_TENANT=true
ENABLE_BILLING=true
ENABLE_FLEET_MANAGEMENT=true